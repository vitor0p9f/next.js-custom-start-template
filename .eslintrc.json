{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true }
    ],
    "semi": [1, "always"],
    "no-multiple-empty-lines": [1, {"max": 1, "maxBOF": 1}],
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  }
}
